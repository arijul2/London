# Premier League Ticket Monitor Configuration
# Copy this file to .env and fill in your values.

# Configure matches to monitor
# Each match needs: MATCH_N_NAME, MATCH_N_MIN_TICKETS, MATCH_N_MAX_PRICE
# Optional: MATCH_N_TRUSTABLE_SELLER_ONLY, MATCH_N_NOTIFY_SEEN_TICKETS, MATCH_N_SECTION_FILTER
# Replace N with the match number (1, 2, 3, etc.)

# Match 1
MATCH_1_NAME=Arsenal vs Everton
MATCH_1_MIN_TICKETS=2
MATCH_1_MAX_PRICE=400
MATCH_1_NOTIFY_SEEN_TICKETS=false

# Match 2
MATCH_2_NAME=Brentford vs Wolves
MATCH_2_MIN_TICKETS=2
MATCH_2_MAX_PRICE=120
MATCH_2_NOTIFY_SEEN_TICKETS=false

# Match with section filter (e.g. Arsenal end only)
# MATCH_N_SECTION_FILTER=Arsenal

# Check interval in minutes
CHECK_INTERVAL_MINUTES=30

# Email notifications
EMAIL_ENABLED=false
EMAIL_TO=your-email@example.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-app-password

# Pushover notifications (get API key from https://pushover.net)
PUSHOVER_ENABLED=false
PUSHOVER_API_KEY=your-api-key
PUSHOVER_USER_KEY=your-user-key

# Desktop notifications (macOS/Linux)
DESKTOP_NOTIFICATIONS_ENABLED=true

# Run once instead of continuously (for testing)
RUN_ONCE=false

# Fanpass base URL (usually don't need to change this)
FANPASS_BASE_URL=https://fanpass.net
